extends ../layout.pug

block title
	+title(dateFormat(today, 'mmmm dS'), 'Schedule')

block content
	div.row
		div.col-12.pb-3
			+scheduleNav(yesterday, today, tomorrow)

		if games.all.length == 0
			h5.col-8.offset-2.text-center There are no games scheduled for #{dateFormat(today, 'mmmm dS')}.
		else
			if games.interesting.length > 0
				each interestingGame in games.interesting
					+gameCard(interestingGame)

				if games.other.length > 0
					hr.col-12.mt-0.mb-4

			if games.other.length > 0
				each otherGame in games.other
					+gameCard(otherGame)
