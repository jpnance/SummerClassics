include mixins.pug

doctype html
html
	head
		meta(charset='utf-8')
		meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')

		block title

		block styles
			link(href='/css/bootstrap.min.css' rel='stylesheet')
			link(href='/css/classics.css' rel='stylesheet')

		block scripts
			script(src='/js/jquery.min.js' type='text/javascript')
			script(src='/js/bootstrap.min.js' type='text/javascript')
			script(src='/js/classics.js' type='text/javascript')

		link(href='/images/favicon.ico' rel='icon')

	body
		div.container
			div.col-xs-12
				h2.mt-2
					strong Summer Classics
				ul
					li
						a(href='/schedule') Schedule
					if session
						li
							a(href='/picks') Picks
						li
							a(href='/users/edit/' + session.username) Settings
						li
							a(href='/logout') Log Out
					else
						li
							a(href='/login') Log In

		if session && session.user.admin
			div.container
				div.d-block.d-sm-none xs
				div.d-none.d-sm-block.d-md-none sm
				div.d-none.d-md-block.d-lg-none md
				div.d-none.d-lg-block.d-xl-none lg
				div.d-none.d-xl-block xl

		div.container.pb-3
			block content
