extends layout.pug

block title
	+title('Picks')

block content
	table
		tr
			th

			each i in [1, 2, 3, 4, 5, 6, 7]
				th.px-2
					span.d-none.d-sm-inline Game #{i}
					span.d-sm-none G#{i}

		each team in teams
			tr
				td.py-2 #{team.teamName}
				if team.classic
					each i in [0, 1, 2, 3, 4, 5, 6]
						td
							if team.classic.picks[i]
								if !team.classic.picks[i].isFinal()
									| #{team.classic.picks[i].opponent.team.abbreviation}
								else if !team.classic.picks[i].opponent.winner
									strong #{team.classic.picks[i].opponent.team.abbreviation}
								else
									strike #{team.classic.picks[i].opponent.team.abbreviation}
